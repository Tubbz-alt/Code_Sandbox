<?xml version="1.0"?>

<!-- Root node for configuration xml document -->
<configuration>

    <!-- 
    Here we specify the layout of the program.  The xml tags 
    correspond to each directory inside.  If there are multiple
    combinations, this will be annotated in each tag.
    -->
    <layout>
        <folder name="dsu" multiple="false" >
            
            <folder name="slice#-collect#"  multiple="true" type="permutation" start1="1" start2="0" count1="8"  count2="4" zero_pad="0" >
                
                <folder name="camera" multiple="false" >
                    
                    <folder name="nitf" multiple="false" >
                    
                    </folder> <!-- end of nitf folder -->
                    
                    <folder name="raw" multiple="false" >
                        
                        <!-- 
                             Notice that the camera directory requires a global count as each directory with this name
                             is counted stared from the previous.
                        -->
                        <folder name="cam#" multiple="true" type="counter" start1="0" count_per_dir="12" zero_pad="3" >
                        
                            <!-- February 24, 2012  -->
                            <folder name="date" multiple="true" type="date" day="24"  month="2"  year="2012" >
                                
                                <!-- Hour folder 8am -->
                                <folder name="08" multiple="false" >
                                    
                                    <!-- Minute folder -->
                                    <folder name="#" multiple="true" type="permutation" start1="0" count1="60" zero_pad="2" >
                                        
                                        <file name="tacid" type="tacid" />

                                    </folder> <!-- end of minute folder -->
                                    
                                </folder> <!-- end of hour folder -->
                                
                                <!-- Hour folder 9am -->
                                <folder name="09" multiple="false" >
                                    <!-- Minute folder -->
                                    <folder name="#" multiple="true" type="permutation" start1="0" count1="60" zero_pad="2" >
                                        <file name="tacid" type="tacid" />
                                    </folder> <!-- end of minute folder -->
                                 </folder> <!-- end of hour folder -->
                                <!-- Hour folder 10am -->
                                <folder name="10" multiple="false" >
                                    <!-- Minute folder -->
                                    <folder name="#" multiple="true" type="permutation" start1="0" count1="60" zero_pad="2" >
                                        <file name="tacid" type="tacid" />
                                    </folder> <!-- end of minute folder -->
                                 </folder> <!-- end of hour folder -->
                                <!-- Hour folder 11am -->
                                <folder name="11" multiple="false" >
                                    <!-- Minute folder -->
                                    <folder name="#" multiple="true" type="permutation" start1="0" count1="60" zero_pad="2" >
                                        <file name="tacid" type="tacid" />
                                    </folder> <!-- end of minute folder -->
                                 </folder> <!-- end of hour folder -->
                            </folder> <!-- end of date folder -->
                        </folder> <!-- end of cam folder -->
                    </folder> <!-- end of raw folder -->
                </folder> <!-- end of camera folder -->
            </folder> <!-- end of slice-collect folder -->
        </folder> <!-- end of dsu folder -->
    
    </layout>
    <tacid>    
        <program_code   value="9Z"    />
        <sortie_number  value="00"    />
        <producer_code  value="ZX"    />
        <product_number value="GEO"   />
        <project_code   value="GS"    />
        <replay_code    value="000"   />
        <extension      value='.nitf' />
        <start_scene    day="24" month="2"  year="2012"  hour="8" minute="0" />
    </tacid>

    <camera_options>
        <frame_rate value="2" />
    </camera_options>

    <run_options>
        <!--
            Supported Debugging Levels
            0 - just run, no output
            1 - show errors
            2 - show info notes and warnings
            3 - stop program operation to output data
        -->
        <debug_level  value="2" />
        <log_file  state="True"  location="simulator.log" />
    </run_options>

</configuration>
